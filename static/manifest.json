{
  "name": "EasyMind",
  "description": "EasyMind Monitoring Toolkit",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "EasyMind",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabCapture",
    "tabs",
    "downloads",
    "downloads.shelf"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zoom.us/*",
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}